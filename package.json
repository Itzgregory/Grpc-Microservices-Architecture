{
  "name": "grpc-microservices",
  "version": "1.0.0",
  "description": "Book and Author Microservices with gRPC",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "combine:schemas": "node combineSchema.js",
    "proto:generate": "node proto-loader.js",
    "generate:author": "prisma generate --schema=./prisma/combinedSchema.prisma",
    "generate:book": "prisma generate --schema=./prisma/combinedSchema.prisma",
    "generate:all": "npm run combine:schemas && npm run generate:author && npm run generate:book",
    "build": "npm run generate:all && npm run proto:generate && nest build author-service && nest build book-service",
    "start:dev": "npm run generate:all && npm run proto:generate && concurrently \"npm run start:author:dev\" \"npm run start:book:dev\"",
    "start:author": "nest start author-service",
    "start:book": "nest start book-service",
    "start:author:dev": "nest start author-service --watch",
    "start:book:dev": "nest start book-service --watch",
    "build:all": "npm run proto:generate && nest build author-service && nest build book-service"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.22.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@grpc/grpc-js": "^1.12.5",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "grpc-tools": "^1.12.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.8.0",
    "protoc": "^1.1.3",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^2.6.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
